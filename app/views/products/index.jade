extends ../shared/template
block content
  h2 Products
  .panel.panel-default
    .panel-body
      table.table.table-hover
        thead
          th Product
          th Photo
          th Price
        tbody
          each product in products
            tr
              td
                form(method='post', action='/cart')
                  input(type='hidden', name='productId' value=product._id)
                  button.btn.btn-primary(type='submit')= product.name
              td#productPhoto(style='background-image: url("#{product.photo}");')
              td= product.price

block scripts

